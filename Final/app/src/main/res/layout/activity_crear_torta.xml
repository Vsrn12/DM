<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFDE7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŽ‚ CREAR TORTA"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#F57F17"
            android:layout_marginBottom="24dp" />

        <!-- FORMA -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forma *"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerForma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="16dp" />

        <!-- TAMAÃ‘O -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TamaÃ±o *"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerTamano"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="16dp" />

        <!-- TIPO DE MASA -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de Masa *"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/rgTipoMasa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/rbTradicional"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tradicional"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/rbPremescla"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Premescla"
                android:textSize="16sp" />
        </RadioGroup>

        <!-- SABOR -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sabor *"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerSabor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="16dp" />

        <!-- RELLENOS -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rellenos (mÃ­nimo 2, mÃ¡ximo 10)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etCantidadRellenos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Â¿CuÃ¡ntos rellenos?"
            android:inputType="number"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnConfirmarRellenos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmar Rellenos"
            android:backgroundTint="#FFA726"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:id="@+id/llRellenos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp" />

        <!-- FORRADO -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forrado *"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerForrado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerColorForrado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="16dp" />

        <!-- ADICIONALES -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adicionales"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etAdicional"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="DescripciÃ³n del adicional"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etPrecioAdicional"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Precio del adicional"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="24dp" />

        <!-- BOTÃ“N CALCULAR -->
        <Button
            android:id="@+id/btnCalcularCosto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CALCULAR COSTO"
            android:textSize="18sp"
            android:padding="16dp"
            android:backgroundTint="#FF6F00" />

    </LinearLayout>
</ScrollView>